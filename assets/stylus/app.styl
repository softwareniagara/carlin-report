app-red = #D43E2A;
app-text = #262626;

* {
  box-sizing: border-box;
}

html,
body {
  font-family: 'Roboto', 'Helvetica Neueu', 'Arial', 'Helvetica', 'sans-serif';
  font-size: 16px;
  width: 100%;
  height: 100%;
}

body {
  margin: 0;
  padding: 0;
}


.button {
  background-color: app-red;
  border: 1px solid darken(app-red, 5%);
  border-radius: 2px;
  color: white;
  font-size: 1em;
  line-height: 1em;
  margin: 0;
  padding: .5em 1em;
  text-shadow: 0 -1px darken(app-red, 15%);
}
.button:hover {
  background-color: darken(app-red, 5%);
  border-color: darken(app-red, 10%);
  text-shadow: 0 -1px darken(app-red, 20%);
}

.clear {
  clear: both;
}

.wrapper {
  position: absolute;
  top: 87px;
  left: 0;
  right: 0;
  bottom: 0;
}

@font-face {
    font-family: 'MeteoconsRegular';
    src: url('../fonts/meteocons-webfont.eot');
    src: url('../fonts/meteocons-webfont.eot?#iefix') format('embedded-opentype'),
         url('../fonts/meteocons-webfont.woff') format('woff'),
         url('../fonts/meteocons-webfont.ttf') format('truetype'),
         url('../fonts/meteocons-webfont.svg#MeteoconsRegular') format('svg');
    font-weight: normal;
    font-style: normal;
}

.weather-icon:before {
  font-family: 'MeteoconsRegular';
  font-style: normal;
  content: attr(data-icon);
  vertical-align: middle;
}

/* ************************************
 * HEADER
 * ***********************************/
#header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;

  background-color: #fff;
  border-bottom: 5px solid app-red;
  padding: 5px 30px;

  h1 {
    background: white url('../images/logo.png') center center no-repeat;
    background-size: cover;
    color: app-text;
    display: inline-block;
    height: 72px;
    line-height: 68px;
    margin: 0 0;
    overflow: hidden;
    text-indent: -9999em;
    vertical-align: middle;
    width: 281px;
  }

  button {
    float: right;
    font-size: 18px;
    margin-top: 18px;
  }
}
 
/* ************************************
 * MAP
 * ***********************************/

#map {
  background-color: #efefef;
  height: 100%;
  width: 100%; 
}

/* ***********************************
 * KNOCKOUT BANNER
 * **********************************/
#knockout {
  position: absolute;
  bottom: 30px;
  right: 30px;

  background-color: #fff;
  border: 5px solid app-red;
  border-radius: 4px;
  padding: 15px 30px;
  width: 180px;

  p {
    margin-top: 0;
  }
}

/* ***********************************
 * MODAL
 * **********************************/

.modal {
  position: relative;

  background: white;
  border-radius(4px);
  padding: 30px;
  width: auto;
  max-width: 500px;
  margin: 20px auto;
}

.question {
  font-size: 18px;
  font-style: italic;
  margin: 15px 0 5px 0;
  padding-bottom: 5px;
  text-align: center;
}

.controls {
  border-top: 1px dotted #cecece;
  border-bottom: 1px dotted #cecece;
  margin-bottom: 15px;
  padding: 15px 0;
  text-align: center;

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  li {
    display: inline-block;
    margin: .5em;
    padding: 0;
  }

  a {
    color: app-text;
    text-decoration: none;
  }

  .title {
    font-size: 12px;
  }
}

.navigation {
  .button {
    text-decoration: none;
  }

  .button.button-previous {
    background-color: #efefef;
    border-color: #dedede;
    color: darken(#dedede, 10%);
    float: left;
    text-shadow: 0 -1px darken(#dedede, 15%);
  }

  .button.button-next {
    float: right;
  }
}

.question-section {
  display: none;
}

.question-section.active {
  display: block;
}

.circle {
  background-color: #fefefe;
  border: 1px solid #cdcdcd;
  border-radius: 2em;
  text-align: center;
  width: 3em;
  height: 3em;

  i {
    color: app-text;
    font-size: 1.5em;
    line-height: 1.75em;
  } 
}

a:hover {
  .circle {
    background-color: lighten(app-red, 50%);
    border-color: lighten(app-red, 25%);
  }
}

a.active {
  color: app-red;

  .circle {
    background-color: app-red;
    border-color: app-red;
    
    i {
      color: white;
    }
  }
}