app-red = #D43E2A;
app-text = #262626;

* {
  box-sizing: border-box;
}

html,
body {
  font-family: 'Roboto', 'Helvetica Neueu', 'Arial', 'Helvetica', 'sans-serif';
  font-size: 16px;
  width: 100%;
  height: 100%;
}

button {
  background-color: app-red;
  border: 1px solid darken(app-red, 5%);
  border-radius: 2px;
  color: white;
  float: right;
  font-size: 1em;
  line-height: 1em;
  margin: 0;
  padding: .5em 1em;
}

/* ************************************
 * HEADER
 * ***********************************/
#header {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;

  background-color: #fff;
  border-bottom: 1em solid app-red;
  padding: 1em 1em;

  h1 {
    color: app-text;
    display: inline-block;
    line-height: 1em;
    margin: 0 0;
  }
}
 
/* ************************************
 * MAP
 * ***********************************/

#map {
  position: absolute;
  top: 6em;
  left: 0;
  right: 0;
  bottom: 0;

  background-color: #efefef;
  height: 100%;
  width: 100%;
}

/* ***********************************
 * MODAL
 * **********************************/

.modal {
  position: relative;

  background: white;
  border-radius(4px);
  padding: 30px;
  width: auto;
  max-width: 500px;
  margin: 20px auto;
}