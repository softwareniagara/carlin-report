app-red = #D43E2A;
app-text = #262626;

* {
  box-sizing: border-box;
}

html,
body {
  font-family: 'Roboto', 'Helvetica Neueu', 'Arial', 'Helvetica', 'sans-serif';
  font-size: 18px;
  width: 100%;
  height: 100%;
}

button {
  background-color: app-red;
  border: 1px solid darken(app-red, 5%);
  border-radius: 2px;
  color: white;
  float: right;
  font-size: 1em;
  line-height: 1em;
  margin: 0;
  padding: .5em 1em;
  text-shadow: 0 -1px darken(app-red, 15%);
}
button:hover {
  background-color: darken(app-red, 5%);
  border-color: darken(app-red, 10%);
  text-shadow: 0 -1px darken(app-red, 20%);
}

/* ************************************
 * HEADER
 * ***********************************/
#header {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;

  background-color: #fff;
  border-bottom: 5px solid app-red;
  padding: 5px 30px;

  h1 {
    background: white url('../images/logo.png') center center no-repeat;
    background-size: cover;
    color: app-text;
    display: inline-block;
    height: 72px;
    line-height: 68px;
    margin: 0 0;
    overflow: hidden;
    text-indent: -9999em;
    vertical-align: middle;
    width: 281px;
  }

  button {
    font-size: 18px;
    margin-top: 18px;
  }
}
 
/* ************************************
 * MAP
 * ***********************************/

#map {
  position: absolute;
  top: 87px;
  left: 0;
  right: 0;
  bottom: 0;

  background-color: #efefef;
  height: 100%;
  width: 100%;
}

/* ***********************************
 * MODAL
 * **********************************/

.modal {
  position: relative;

  background: white;
  border-radius(4px);
  padding: 30px;
  width: auto;
  max-width: 500px;
  margin: 20px auto;
}